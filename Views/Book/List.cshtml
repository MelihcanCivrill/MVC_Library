@model List<MVC_Library.Models.ORM.Entities.Concrete.Book>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="content">
    <div>
        <h4 class="mt-2">Book List</h4>
    </div>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <table id="example" class="table table-striped table-bordered mt-1" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Genre</th>
                        <th>İmage</th>
                        <th>Update</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>@item.Genre</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Book/Update/@item.Id" class="btn btn-sm btn-warning">Update</a></td>
            <td><a href="/Book/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a></td>
        </tr>}
                </tbody>
            </table>

            <!-- Modal -->
            <div id="myModal" class="modal fade" role="dialog">
                <div class="modal-dialog">

                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">Row information</h4>
                        </div>
                        <div class="modal-body">

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

